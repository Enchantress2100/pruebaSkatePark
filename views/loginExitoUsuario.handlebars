  <body>
 <a href="/"><h1>Skate Park</h1></a>
<h2>Login exitoso</h2>
    <div class="py-4">
      <h2>Datos del perfil</h2>
      <hr class="w-50" />
      <form action="/skater-update" method="post">
{{#if skater}}
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label for="email">Email</label>
            <input class="form-control m-auto" name="email" type="text" value="{{skater.email}}" readonly/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="nombre">Nombre</label>
            <input class="form-control m-auto" type="text" name="nombre" value="{{skater.nombre}}"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input type="password" class="form-control m-auto" name="password" value="{{skater.password}}"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input type="password" class="form-control m-auto" name="password2" value="{{skater.password2}}"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>AÃ±os de experiencia</label>
            <input class="form-control m-auto" type="text" name="anos_experiencia" value="{{skater.anos_experiencia}}" />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input class="form-control m-auto" name="especialidad" type="text" value="{{skater.especialidad}}" />
          </div>
        </div>
         <div class="mb-1">
          <button class="btn btn-primary"><a href="/skater-update"></a>Actualizar</button>
    </div>
      <div>
          <button class="btn btn-danger"><a class="button" href="/skater-delete?email={{skater.email}}">Eliminar cuenta</a></button>
      </div>
      </form>
    </div>
    {{/if}}
    <script src="/BootstrapJs/bootstrap.js"></script>
  </body>
</html>